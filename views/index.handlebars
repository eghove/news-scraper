{{!-- this is the content that gets passed to the body in main-handlebars --}}

<div class = "container">
  <div class = "row">
    <div class = "col-md-12">
      <div class = "jumbotron">
        <h1 class = "jumbotron d-flex justify-content-center">Vox News Scraper</h1>
        <p class = "lead">A scraper and note taker for Vox.com</p>
        <hr>
        {{!-- Scrape button --}}
        <button type="button" class="btn btn-primary" id = "scraper">New Scrape</button>
      </div>
    </div>
  </div>

{{!-- SPACER --}}

    <br />

    <br />

  

    {{#each article}}
    <div class = "row">
      <div class = "col-md-7">
        <div class = "card">
          <h3 class = "card-title">{{this.title}} </h3>
          <hr>
          <p class = "byline">By: {{this.byline}}</p>
          <hr>
          <p class = "summary">{{this.summary}}</p>
          <p class = "date-scraped"> stuff </p>
        </div>
      </div>
    </div>
    {{/each}}

    
</div>